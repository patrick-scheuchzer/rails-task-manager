<h1><%= @task.name %></h1>
<p><%= @task.details %></p>
<p><%= @task.created_at %></p>
<% if @task.completed %>
  <p>Task is done!</p>
<% end %>

<%= link_to "All Tasks", tasks_path %>
<%= link_to "Edit", edit_task_path(@task) %>
<%= link_to "Delete", task_path(@task), method: :delete, data: {confirm: "Are you sure?"} %>
